- block footerjs
	script(src="//code.highcharts.com/4.0.4/highcharts.js")
	script(type="text/javascript")
		|$(function () {
		|	$('#maincontainer').highcharts({
		|		chart: {
		|			type: 'pie',
		|			options3d: {
		|				enabled: true,
		|				alpha: 45,
		|				beta: 0
		|			}
		|		},
		|		title: {
		|			text: '书籍分类统计, 共{{book_count|floatformat}}本'
		|		},
